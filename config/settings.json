{
    "usersPath": "./users",
    "templatesPath": "./templates",
    "challengesPath": "./challenges",
    "languages": [
        "groovy",
        "java",
        "javascript"
    ],
    "ignoreFiles": {
        "groovy": [
            "*.class"
        ],
        "java": [
            "target",
            "*.class"
        ],
        "javascript": [
            "node_modules"
        ]
    },
    "default": {
        "username": "anonymous",
        "languages": "javascript"
    },
    "script": {
        "java": [
            "mvn test"
        ],
        "javascript": [
            "npm install && karma start karma.config.js"
        ],
        "groovy": [
            "groovy CodeChallenge.groovy"
        ]
    }

}
